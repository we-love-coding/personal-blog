<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.barnnet.work.helper.mapper.AuthMapper">
    <resultMap id="LoginUserResultMap" type="com.barnnet.work.helper.entity.LoginUser">
        <id column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="user_password" property="userPassword"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="salt" property="salt"/>
        <result column="ip" property="ipDress"/>
    </resultMap>
    <select id="selectLoginUser" resultMap="LoginUserResultMap">
        select * from loginuser where user_name = #{userName} and user_password = #{userPass};
    </select>

    <select id="selectByPhone" resultMap="LoginUserResultMap">
        select * from loginuser where phone = #{phone};
    </select>

    <select id="selectByEmail" resultMap="LoginUserResultMap">
        select * from loginuser where email = #{email};
    </select>
</mapper>